        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "watch": true
    },
    "include": [
        "./src/**/*"
    ],
    "types":[
        "node",
        "react",
        "react-dom"
    ],
    "typeRoots":[
        "node_modules/@types"
    ]

 }   

